{
  "name": "rest-api-node",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "example of rest api writted on Node.Js with Express and Typescript",
  "main": "index.js",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "nodemon",
    "orm:generate": "prisma generate",
    "dev:inspect": "nodemon -e ts,json --exec node --inspect=localhost:9222 -r ts-node/register src/main.ts",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "test:unit": "jest",
    "test:e2e": "jest --config jest.e2e.config.ts",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Insid1/rest-node.git"
  },
  "author": "Oleg Volobuev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Insid1/rest-node/issues"
  },
  "homepage": "https://github.com/Insid1/rest-node#readme",
  "dependencies": {
    "@prisma/client": "^4.14.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "inversify": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "reflect-metadata": "^0.1.13",
    "tslog": "^4.8.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prisma": "^4.14.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
